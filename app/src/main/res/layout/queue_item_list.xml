<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/list_item_run_time"
              android:layout_alignParentRight="true"
              android:padding="4dp"
              tools:text="Run Time"/>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/list_item_song_title"
              android:layout_toLeftOf="@id/list_item_run_time"
              android:textStyle="bold"
              android:padding="4dp"
              tools:text="Song Title"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/list_item_song_title"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="4dp"
                  tools:text="Artist Name"
                  android:id="@+id/list_item_artist"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="4dp"
                  tools:text="Album Name"
                  android:id="@+id/list_item_album"/>
    </LinearLayout>
</RelativeLayout>